# 目标硬件架构 (RAX3000M NAND)
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_mt7981=y
CONFIG_TARGET_mediatek_mt7981_DEVICE_cmcc_rax3000m-nand=y

# 基础界面与中文支持
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-app-argon-config=y

# 1. 功率增强与无线管理 (必须开启 mtwifi-cfg 以获得好界面)
CONFIG_PACKAGE_luci-app-mtwifi-cfg=y
CONFIG_PACKAGE_luci-i18n-mtwifi-cfg-zh-cn=y
CONFIG_PACKAGE_mtwifi-cfg=y

# 2. 网络加速 (核心功能：Turbo ACC)
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_OFFLOADING=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_BBR_CCA=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_SHORTCUT_FE=y

# 3. 科学上网 (使用 OpenClash，它比 mosdns 编译成功率高得多)
CONFIG_PACKAGE_luci-app-openclash=y

# 4. Mesh 组网支持 (802.11k/v/r)
CONFIG_PACKAGE_wpad-openssl=y
CONFIG_PACKAGE_kmod-cfg80211=y

# 5. 其他必须的小工具
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_luci-app-autoreboot=y
CONFIG_PACKAGE_luci-app-wol=y
CONFIG_PACKAGE_luci-app-ttyd=y

# --- 彻底禁用导致报错的“重型”插件 ---
# CONFIG_PACKAGE_luci-app-mosdns is not set
# CONFIG_PACKAGE_mosdns is not set
# CONFIG_PACKAGE_luci-app-adguardhome is not set
# CONFIG_PACKAGE_luci-app-qbittorrent is not set
# CONFIG_PACKAGE_luci-app-samba4 is not set
